<?xml version="1.0" encoding="utf-8"?>
<com.android.a47swipemaker.HaftRightCoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/activity_main"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:id="@+id/backgroundView"
        android:background="@color/white"
        android:src="@drawable/trash_inactive"></ImageButton>

    <com.xenione.libs.swipemaker.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/foregroundView">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/waste_categories"
            android:scaleType="centerCrop"
            android:id="@+id/bg"></ImageView>

    </com.xenione.libs.swipemaker.SwipeLayout>

</com.android.a47swipemaker.HaftRightCoordinatorLayout>